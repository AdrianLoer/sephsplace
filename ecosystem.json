{
  apps: [{
      name: "sephsplace",
      script: "server.js",
      env: {},
      instances: 0,
      exec_mode: "cluster",
  }],

  deploy: {
    production: {
      user : "josephg",
      host : "josephg.com",
      ref  : "origin/master",
      repo : "https://github.com/josephg/sephsplace.git",
      path : "/home/josephg/deploy/sephsplace",
      "post-deploy" : "nvm use 6; ln -s /home/josephg/data/sephsplace snapshot; yarn install && pm2 startOrRestart ecosystem.json --env production",
      env: {
        "NODE_ENV": "production"
      }
    }
  }
}
